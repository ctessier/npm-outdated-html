<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
        href="https://unpkg.com/bootstrap-material-design@4.1.1/dist/css/bootstrap-material-design.min.css"
        integrity="sha384-wXznGJNEXNG1NFsbm0ugrLFMQPWswR3lds2VeinahP8N0zJw9VWSopbjv2x7WCvX" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.20/datatables.min.css" />
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@9.16.2/build/styles/atom-one-dark.min.css">

    <title>NPM Outdated Report</title>
    <meta name="description" content="{{count.total}} outdated dependencies.">

    <style>
        pre {
            background-color: #333333;
            padding: 15px;
        }

        pre code {
            color: #fff;
        }
    </style>

    {{#if_eq theme 'dark'}}
    <style>
        body {
            color: #fff;
            background-color: #1e1e1e;
        }

        .card {
            background-color: #252526;
        }

        .table thead th {
            color: #fff
        }

        code {
            color: #c586c0
        }

        a {
            color: #9cdcfe;
        }

        a:hover {
            color: #9cdcfe;
            opacity: 0.667;

        }

        .close {
            color: #fff;
        }

        .close:hover {
            color: #fff;
            text-decoration: none;
        }

        .table thead th {
            border-bottom: 2px solid #444;
        }

        .table th,
        .table td {
            border-top: 1px solid #444;
        }

        .form-control {
            background-color: #333333;
            color: #fff;
        }

        .form-control:focus {
            background-color: #333333;
            color: #fff;
        }

        .page-link {
            color: #9cdcfe;
        }

        .page-item.active .page-link {
            color: #000;
            background-color: #9cdcfe;
            border-color: #9cdcfe;
        }
    </style>
    {{/if_eq}}
</head>

<body class="mb-3">
    <div class="container">
        <h1 class="mt-5 text-center">NPM Outdated Report</h1>

        <div class="text-center">
            <div class="card-deck my-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            {{count.dependencies}}
                        </h5>
                        <p class="card-text">Dependencies</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            {{count.devDependencies}}
                        </h5>
                        <p class="card-text">Dev dependencies</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            {{moment date "MMMM Do YYYY, h:mm:ss a"}}
                        </h5>
                        <p class="card-text">Last updated</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">

                <table id="dependencies" class="table">
                    <thead>
                        <tr>
                            <th scope="col">Type</th>
                            <th scope="col">Module</th>
                            <th scope="col">Wanted</th>
                            <th scope="col">Current</th>
                            <th scope="col">Latest</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each dependencies}}
                        <tr>
                            <td>{{type}}</td>
                            <th scope="row">
                                <a href="{{homepage}}">{{name}}</a>
                            </th>
                            <td>{{wanted}}</td>
                            <td>{{current}}</td>
                            <td>{{latest}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.20/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#dependencies').DataTable({
                order: [[2, 'asc']]
            });
        });
    </script>
</body>

</html>
